.item-box-container
  %h1.item-name 
    = @item.name
  .item-main-content-clearfix
    .item-photo
      #content
        #featured_img
          - if @item.pictures.present?
            = image_tag "#{@item.pictures[0]}", class:'img', height: '300px;' , width:' 300px;' 
          - else
            = image_tag "", class:'active'
        .photo-holder
          #thumb_img.cf
            - if @item.pictures.present?
              - @item.pictures.each_with_index do |picture, i|
                = image_tag "#{picture}", class:'active', height: '180px;' , width:' 180px;' 
            - else
              = image_tag "", class:'active'
    .item-detail-table
      .tr
        .th
          出品者
        .td
          = link_to "#{@user.nickname}"
          .user-rating
            .item-user-ratings
              .icon-good
                %i.fas.fa-smile-beam
                %span
                0
            .item-user-ratings
              .icon-nomal
                %i.fas.fa-meh
                %span
                0
            .item-user-ratings
              .icon-bad
                %i.fas.fa-frown
                %span
                0
      .tr
        .th
          カテゴリー
        .td
          =link_to "#{@categories.name}"
          %br
          =link_to '靴'
          %br
          =link_to 'スニーカー'
      .tr
        .th
          ブランド
        .td
          =link_to 'シャネル'
      .tr
        .th
          商品のサイズ
        .td
          L
      .tr
        .th
          商品の状態
        .td
          = @item.condition
      .tr
        .th
          配送料の負担
        .td
          送料込み(出品者負担)
      .tr
        .th
          配送の方法
        .td
          = @deliveries.delivery_method
      .tr
        .th
          配送元地域
        .td
          = @deliveries.delivery_day
      .tr
        .th
          発送日の目安
        .td
          = @deliveries.delivery_area
  .item-price-box
    %span.item-price
      ¥ 
      = @item.price
    %span.item-tax
      (税込)
    %span.item-shipping-fee
      送料込み
  - if user_signed_in? && current_user.id == @item.seller_id
    .item-buy-btn
      = link_to '編集', "/jp/#{@item.id}/edit", method: :get
    .item-buy-btn-delete
      = link_to '削除', item_path(id: @item.id), method: :delete, data:{confirm: "本当に削除しますか？\n削除した商品を元の状態に戻すことはできません。"}
  - elsif user_signed_in? && current_user.id != @item.seller_id && @item.buyer_id == nil
    .item-buy-btn
      =link_to '購入画面に進む', transaction_items_path(id: @item.id)
  - else
    .item-buy-btn
      売り切れです
  .item-description
    %p.item-description-inner
      = @item.description
  .item-btn-container-clearfix
    .item-btn-left
      .like
        %span
          ♡  いいね！
      .report
        %span
          不適切な商品の報告
    .item-btn-light
      =link_to "鍵  あんしん・あんぜんへの取り組み"
.item-detail-message
  .message-container
    .message-item
      .message-icon
        =link_to "●"
