%body
  .main
    .container
      .new_resistration
        発送元・お届け先住所入力
      .contentsbox
        = form_for(@address, url: jp_signup_address_path) do |f|
          = render "devise/shared/error_messages", resource: @address
          .field
            = f.label "お名前(全角)"
            %br/
            = f.text_field :last_name, autofocus: true, autocomplete: "last_name", value: "#{@user.last_name}"
            = f.text_field :first_name, autofocus: true, autocomplete: "first_name", value: "#{@user.first_name}"
          .field
            = f.label "お名前カナ(全角)"
            %br/
            = f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", value: "#{@user.last_name_kana}"
            = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", value: "#{@user.first_name_kana}"
          .field
            = f.label "郵便番号"
            %br/
            = f.text_field :zipcode, autofocus: true, placeholder: "例)123-4567"
          .field
            = f.label "都道府県"
            %br/
            = f.select :prefecture,[ |
              ["北海道"],               |
              ["青森県"],               |
              ["岩手県"],               |
              ["宮城県"],               |
              ["秋田県"],               |
              ["山形県"],               |
              ["福島県"],               |
              ["茨城県"],               |
              ["栃木県"],               |
              ["群馬県"],               |
              ["埼玉県"],               |
              ["千葉県"],               |
              ["東京都"],               |
              ["神奈川県"],              |
              ["新潟県"],               |
              ["富山県"],               |
              ["石川県"],               |
              ["福井県"],               |
              ["山梨県"],               |
              ["長野県"],               |
              ["岐阜県"],               |
              ["静岡県"],               |
              ["愛知県"],               |
              ["三重県"],               |
              ["滋賀県"],               |
              ["京都府"],               |
              ["大阪府"],               |
              ["兵庫県"],               |
              ["奈良県"],               |
              ["和歌山県"],              |
              ["鳥取県"],               |
              ["島根県"],               |
              ["岡山県"],               |
              ["広島県"],               |
              ["山口県"],               |
              ["徳島県"],               |
              ["香川県"],               |
              ["愛媛県"],               |
              ["高知県"],               |
              ["福岡県"],               |
              ["佐賀県"],               |
              ["長崎県"],               |
              ["熊本県"],               |
              ["大分県"],               |
              ["宮崎県"],               |
              ["鹿児島県"],              |
              ["沖縄県"]]               |
          .field
            = f.label "市区町村"
            %br/
            = f.text_field :city, autofocus: true, placeholder: "例)横浜市緑区"
          .field
            = f.label "番地"
            %br/
            = f.text_field :address, autofocus: true, placeholder: "例)青山1-1-1"
          .field
            = f.label "建物名"
            %br/
            = f.text_field :address_building, autofocus: true, placeholder: "例)柳ビル103"
          .actions
            = f.submit "次へ進む"
